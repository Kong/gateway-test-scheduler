{
  "name": "gateway-test-scheduler",
  "description": "Kong Gateway test scheduler",
  "version": "1",
  "author": "Hans HÃ¼bner",
  "private": true,
  "homepage": "https://github.com/Kong/gateway-test-scheduler#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kong/gateway-test-scheduler.git"
  },
  "keywords": [
    "GitHub",
    "Actions",
    "JavaScript"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "jest --passWithNoTests",
    "format:write": "prettier --write **/*.js",
    "format:check": "prettier --check **/*.js",
    "lint": "npx eslint . -c ./.github/linters/.eslintrc.yml",
    "package": "ncc build -s src/actions.js --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "(jest && make-coverage-badge --output-path ./badges/coverage.svg) || make-coverage-badge --output-path ./badges/coverage.svg",
    "all": "npm run format:write && npm run lint && npm run test && npm run package",
    "cli": "node ./src/cli.js"
  },
  "license": "MIT",
  "eslintConfig": {
    "extends": "./.github/linters/.eslintrc.yml"
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@octokit/rest": "^20.0.2",
    "adm-zip": "^0.5.12",
    "ascii-table3": "^0.9.0",
    "axios": "^1.6.8",
    "commander": "^12.0.0",
    "date-fns": "^3.6.0",
    "dd-trace": "^5.10.0",
    "glob": "^10.3.12",
    "ms": "^2.1.3",
    "octokit": "^3.1.2",
    "tmp": "^0.2.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.3",
    "@babel/eslint-parser": "^7.24.1",
    "@babel/preset-env": "^7.24.3",
    "@vercel/ncc": "^0.38.1",
    "babel-preset-jest": "^29.6.3",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^4.10.2",
    "eslint-plugin-jest": "^27.9.0",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.2.5"
  }
}
